{

  "name": "X-Clacks-Overhead",
  "manifest_version": 2,
  "description": "Display the X-Clacks-Overhead in Clacks Semaphore, including http-equiv meta tags. Fork from GNU_Terry_Pratchett",
  "author": "Rob Grundy, Jay Logan, Wayne Myers",
  "version": "0.4.2",

  "permissions": [
    "webRequest",
	"tabs",
	"alarms",
    "<all_urls>"
  ],
  "content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["gnu.js"]
	  }
	],
  "background": {
	  "scripts": ["background-script.js"]
	},

  "browser_action": {
    "default_icon": {
			"16": "data/Clacks16/BLANK.png",
			"32": "data/Clacks32/BLANK.png",
			"64": "data/Clacks64/BLANK.png"
    }
  }

}
